<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginStart="10dp"
    tools:context=".DriverMainRegistration">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"

        android:text="Fill In The Details To Continue" />

    <TextView
        android:id="@+id/textViewProfileDetails"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:drawableEnd="@drawable/arrowright"
        android:layout_marginTop="10dp"
        android:text="Profile Details" />
    <TextView
        android:id="@+id/textViewPersonalDetails"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:drawableEnd="@drawable/arrowright"
        android:layout_marginTop="10dp"
        android:text="Required Documents" />
    <TextView
        android:id="@+id/textViewVehicleDetails"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:drawableEnd="@drawable/arrowright"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:text="Bike Details" />

</LinearLayout>